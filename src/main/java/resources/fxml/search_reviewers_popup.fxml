<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="popup" maxHeight="-Infinity"
	maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
	onMouseDragged="#dragged" onMousePressed="#pressed" prefHeight="380.0"
	prefWidth="920.0" stylesheets="@../styles/main_style.css"
	xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="alfatec.controller.conference.SearchReviewersController">
	<children>
		<TableView id="tableView" fx:id="reviewerTableView"
			layoutX="10.0" layoutY="72.0" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="300.0" prefWidth="900.0">
			<columns>
				<TableColumn fx:id="reviewerNameColumn" editable="false"
					maxWidth="150.0" minWidth="100.0" prefWidth="101.5999755859375"
					text="First name" />
				<TableColumn fx:id="reviewerLastNameColumn"
					editable="false" maxWidth="150.0" minWidth="100.0"
					prefWidth="199.20001220703125" text="Last name" />
				<TableColumn fx:id="institutionNameColumn"
					editable="false" maxWidth="200.0" minWidth="200.0" prefWidth="75.0"
					text="Institution name" />
				<TableColumn fx:id="emailColumn" editable="false"
					maxWidth="250.0" minWidth="250.0" prefWidth="75.0" text="E-mail" />
				<TableColumn fx:id="countryColumn" editable="false"
					maxWidth="145.5999755859375" minWidth="0.0" prefWidth="0.0"
					text="Country" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
		<ToolBar id="searchToolbar" layoutX="14.0" layoutY="14.0"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefHeight="50.0" prefWidth="700.0">
			<items>
				<HBox maxHeight="-Infinity" maxWidth="-Infinity"
					minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
					prefWidth="40.0">
					<children>
						<ImageView fitHeight="30.0" fitWidth="40.0"
							pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../images/search_icon.png" />
							</image>
						</ImageView>
					</children>
					<padding>
						<Insets right="5.0" />
					</padding>
				</HBox>
				<TextField id="searchTextField"
					fx:id="searchReviewerTextField" maxHeight="-Infinity"
					maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
					prefHeight="40.0" prefWidth="640.0"
					promptText="Search reviewers..." />
			</items>
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
		</ToolBar>
		<JFXButton id="button" fx:id="selectReveiwerButton"
			buttonType="RAISED" layoutX="725.0" layoutY="19.0"
			maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" onAction="#selectReviewer" prefHeight="40.0"
			prefWidth="100.0" text="Select" />
		<VBox layoutX="893.0" layoutY="1.0" maxHeight="-Infinity"
			maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="25.0" prefWidth="25.0" AnchorPane.rightAnchor="4.0"
			AnchorPane.topAnchor="4.0">
			<children>
				<Button fx:id="closeButton" maxHeight="-Infinity"
					maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
					mnemonicParsing="false" onAction="#close" prefHeight="25.0"
					prefWidth="25.0">
					<graphic>
						<ImageView fitHeight="25.0" fitWidth="25.0"
							pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../images/quit_login_icon.png" />
							</image>
						</ImageView>
					</graphic>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</Button>
			</children>
		</VBox>
	</children>
</AnchorPane>
